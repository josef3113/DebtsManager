<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_monetization_on_black_24dp"
            android:tint="@color/green_300" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_xlarge" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/tebsMenuMyDebts"
        android:layout_marginLeft="-4dp"
        android:layout_marginRight="-4dp"
        android:background="@drawable/btn_rounded_green_300"
        android:text="My Debts"
        android:textAllCaps="false"
        android:textColor="@color/blue_grey_900" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rounded_green_300"
            android:text="Other Debts"
            android:id="@+id/tebsMenuOtherDebts"
            android:textAllCaps="false"
            android:textColor="@color/blue_grey_900" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rounded_green_300"
            android:text="Pay Debts"
            android:id="@+id/tebsMenuAddDebt"
            android:textAllCaps="false"
            android:textColor="@color/blue_grey_900" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="-4dp"
            android:layout_marginRight="-4dp"
            android:background="@drawable/btn_rounded_green_300"
            android:text="Manager Options"
            android:id="@+id/tebsMenuReplaceManager"
            android:textAllCaps="false"
            android:textColor="@color/blue_grey_900" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />

    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
